@model KudVenkat.Models.Company

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index","Radio",FormMethod.Post))
{
    foreach (var department in Model.Departments)
    {
        @Html.RadioButtonFor(m => m.SelectedDepartment, department.Id, 
       (department.isSelected.HasValue && department.isSelected.Value)?new {@checked="checked"}:null
       )  @department.Name;

        <br />

    }
    <br />
    <input type="submit" value="submit" />
}

